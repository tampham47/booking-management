html(ng-app='booking-mamangement')
	head
		meta(charset='UTF-8')
		title
			| Juddy Express
		link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.min.css')

		//- medium-editor
		//- link(rel='stylesheet', href='bower_components/medium-editor/dist/css/medium-editor.css')
