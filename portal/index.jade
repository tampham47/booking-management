		link(rel='stylesheet', href='bower_components/angular-bootstrap-datetimepicker/src/css/datetimepicker.css')
		link(rel='stylesheet', href='bower_components/angular-datepicker/dist/index.min.css')

	body(style='padding:60px 30px;')

		include views/home/login

		div.row.clearfix(ng-controller='nav-ctrl')
			div.col-md-12.column
				nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
					div.navbar-header(style='margin-left:14px')
						button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/#/', style='color:#a0f900')
							| Juddy Express

					div#bs-example-navbar-collapse-1.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(ng-href='#/booking')
									b ĐẶT VÉ
							li
								a(ng-if='user.role == "admin"',
									ng-href='#/car') Chuyến Xe
							li
								a(ng-if='user.role == "admin"',
									ng-href='#/emp') Nhân viên
							li
								a(ng-if='user.role == "admin"',
									ng-href='#/route') Tuyến
							//- li
								a(ng-if='user.role == "admin"',
									ng-href='#/guest') Khách hàng
							li
								a(ng-if='user.role == "admin"',
									ng-href='#/setting') Cài đặt


						ul.nav.navbar-nav.navbar-right(style='padding-right:40px')
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown')
									| {{user.full_name || user.username}}
									b.caret
								ul.dropdown-menu
									//- li
									//- 	a(href='#') Thông tin tài khoản
									//- li
									//- 	a(href='#') Quản lý bài viết
									//- li
									//- 	a(href='#') Quản lý profile
									//- li.divider
									li
										a(href='#', ng-click='logout()') Đăng xuất

		div(ng-view, style='margin-top:14px')

		.row(style='margin-top:50px; margin-bottom:50px')
			.col-md-12
				label.label.label-success #Youthstd 2014

